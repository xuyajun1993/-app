<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/newcontentrl"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:layout_alignParentRight="true"
        android:background="@drawable/titlebar"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/news_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:background="@android:color/transparent"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/news_reviewcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/news_back"
            android:layout_alignParentRight="true"
            android:layout_marginRight="38dp"
            android:text="118"
            android:textColor="#ffffff" />

        <ImageButton
            android:id="@+id/news_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/news_reviewcount"
            android:layout_toLeftOf="@+id/news_reviewcount"
            android:background="@android:color/transparent"
            android:src="@drawable/review_white" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/relativeLayout1"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/newcontentrl"
        android:background="#f5f4f4"
        android:text="TextView" />

    <LinearLayout
         android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
         android:background="#ffffff"
         >

        <EditText
            android:id="@+id/et_writereview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:background="@android:drawable/editbox_background_normal"
            android:drawableLeft="@drawable/pen"
            android:ems="11"
            android:layout_weight="4"
              android:layout_gravity="center_vertical"
            android:hint="写评论" />

        <ImageButton
            android:id="@+id/review_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:src="@drawable/share" />

    </LinearLayout>

</RelativeLayout>