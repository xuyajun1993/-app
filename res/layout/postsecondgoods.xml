<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f4f4"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_selectpic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/take_photo" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="拍照或上传商品照片" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="vertical" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="3dp"
            android:background="#e2e2e2" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="1dip" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:background="#f5f4f4"
                    android:gravity="center"
                    android:text="价格(￥)"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/et_oriprice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dip"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:hint="0.00"
                    android:inputType="numberDecimal"
                    android:textColor="#e3b6b2" >
                </EditText>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dip"
                    android:background="#f5f4f4"
                    android:gravity="center"
                    android:text="原格(￥)"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/et_barprice"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dip"
                    android:background="#ffffff"
                    android:hint="0.00"
                    android:inputType="numberDecimal" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="3dp"
            android:background="#e2e2e2" >

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="1dip" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:background="#f5f4f4"
                    android:gravity="center"
                    android:text="类别"
                    android:textSize="13sp" />
                <Spinner
                    android:id="@+id/type_spinner"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dip"
                    android:background="#ffffff"
                    android:layout_weight="1"
                     />

            </TableRow>
        </TableLayout>
         <TableLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="3dp"
            android:background="#e2e2e2" >

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="1dip" >

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="60dp"
                    android:gravity="center"
                    android:layout_height="35dp"
                    android:background="#f5f4f4"
                    android:text="联系电话"
                    android:textSize="10sp" />
               

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_weight="1"
                    android:layout_margin="1dip"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                     >
                </EditText>

            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:background="@drawable/price_black" >

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="0.5dip" >

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="52dp"
                    android:gravity="center"
                    android:layout_height="60dp"
                    android:background="#f5f4f4"
                    android:drawableTop="@drawable/discription"
                    android:text="商品描述"
                    android:textSize="10sp" />

                <EditText
                    android:id="@+id/et_describe"
                    android:layout_weight="1"
                    android:layout_margin="1dip"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/goodsborder"
                     >
                </EditText>

            </TableRow>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_publish_selector"
            android:gravity="center"
            android:text="立即发布"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>